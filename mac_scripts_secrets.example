#!/bin/zsh
# =============================================================================
# Mac Scripts Secrets Configuration
# =============================================================================
# This file contains sensitive configuration data for mac_scripts tools.
# 
# File lookup priority:
#   1. Source code root (same directory as this example file) - RECOMMENDED
#   2. iCloud Drive: ~/Library/Mobile Documents/com~apple~CloudDocs/Backups/mac_scripts_secrets
#
# To use:
# 1. Copy this file and rename to: mac_scripts_secrets (in source root)
#    OR copy to: ~/Library/Mobile Documents/com~apple~CloudDocs/Backups/mac_scripts_secrets
# 2. Fill in your actual values
# 3. Remove this comment block if desired
# =============================================================================

# =============================================================================
# VPS Configurations
# =============================================================================
# Format: "VPS_NAME|USER|IP|SERVICE_NAME|LOCAL_PORT|TARGET_HOST|TARGET_PORT"
# Example: "production|admin|192.168.1.100|postgres|5432|localhost|5432"
#
# VPS_NAME: Friendly name for the VPS
# USER: SSH username to connect to the VPS
# IP: VPS IP address or hostname
# SERVICE_NAME: Name of the service (e.g., postgres, mongodb, redis)
# LOCAL_PORT: Local port for SSH tunnel
# TARGET_HOST: Target host on VPS (usually localhost)
# TARGET_PORT: Target service port on VPS
# =============================================================================
typeset -a VPS_CONFIGS=(
    # "vps1|user|192.168.1.100|postgres|5432|localhost|5432"
    # "vps2|admin|192.168.1.101|mongodb|27017|localhost|27017"
)

# =============================================================================
# PostgreSQL Source Configurations
# =============================================================================
# Format: "name|postgresql://user:pass@host:port/db|database"
# Example: "production_db|postgresql://admin:password@localhost:5432/mydb|mydb"
#
# name: Friendly name for this source
# postgresql://...: Full connection string
# database: Database name
# =============================================================================
typeset -a POSTGRES_SOURCES=(
    # "prod_db|postgresql://user:password@localhost:5432/production|production"
    # "dev_db|postgresql://user:password@localhost:5433/development|development"
)

# =============================================================================
# PostgreSQL Target Configurations
# =============================================================================
# Format: "name|postgresql://user:pass@host:port/db?sslmode=require"
# Example: "cloud_db|postgresql://admin:password@db.example.com:5432/mydb?sslmode=require"
#
# name: Friendly name for this target
# postgresql://...: Full connection string with SSL mode
# =============================================================================
typeset -a POSTGRES_TARGETS=(
    # "cloud_prod|postgresql://user:password@db.example.com:5432/production?sslmode=require"
    # "backup_db|postgresql://user:password@backup.example.com:5432/backup?sslmode=require"
)

# =============================================================================
# MongoDB Source Configurations
# =============================================================================
# Format: "name|mongodb://user:pass@host:port|db1,db2,db3"
# Example: "prod_mongo|mongodb://admin:password@localhost:27017|app_db,logs_db"
#
# name: Friendly name for this source
# mongodb://...: Connection string (without database name)
# db1,db2,db3: Comma-separated list of database names to sync
# =============================================================================
typeset -a MONGO_SOURCES=(
    # "prod_mongo|mongodb://user:password@localhost:27017|app_db,logs_db"
    # "dev_mongo|mongodb://user:password@localhost:27018|test_db"
)

# =============================================================================
# MongoDB Target Configurations
# =============================================================================
# Format: "name|mongodb://user:pass@host:port"
# Example: "cloud_mongo|mongodb://admin:password@mongo.example.com:27017"
#
# name: Friendly name for this target
# mongodb://...: Connection string (without database name)
# =============================================================================
typeset -a MONGO_TARGETS=(
    # "cloud_mongo|mongodb://user:password@mongo.example.com:27017"
    # "backup_mongo|mongodb://user:password@backup.example.com:27017"
)
