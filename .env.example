# Cloudflare Configuration for SSL Certificates
CF_DNS_API_TOKEN=your_cloudflare_dns_api_token
CF_API_EMAIL=your_cloudflare_email@example.com

# Database Configuration
# PostgreSQL 16
POSTGRES_DB=myapp
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_postgres_password

# MongoDB 8
MONGO_INITDB_ROOT_USERNAME=mongo_admin
MONGO_INITDB_ROOT_PASSWORD=your_secure_mongo_password
MONGO_INITDB_DATABASE=myapp

# Redis 7
REDIS_PASSWORD=your_secure_redis_password

# Service Hostnames
TRAEFIK_HOST=traefik.heimerng.dev
PORTAINER_HOST=portainer.heimerng.dev
PDF_HOST=pdf.heimerng.dev

# Database Hostnames for Traefik routing
POSTGRES_HOSTNAME=postgres-xxxxx.heimerng.dev
MONGODB_HOSTNAME=mongodb-xxxxx.heimerng.dev
REDIS_HOSTNAME=redis-xxxxx.heimerng.dev

# Custom Database Ports (for external connections via Traefik)
POSTGRES_EXTERNAL_PORT=15432
MONGODB_EXTERNAL_PORT=27018
REDIS_EXTERNAL_PORT=16379
